<ContentPage
    x:Class="FinanceJAPS.Pages.ForgotPassword"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5FFF8">

    <Grid>
        <!--  Encabezado  -->
        <BoxView BackgroundColor="#04C7A6" HeightRequest="200" />

        <ScrollView>
            <StackLayout Padding="30" Spacing="20">
                <!--  Título  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="32"
                    HorizontalOptions="Center"
                    Text="Forgot Password"
                    TextColor="Black" />

                <!--  Texto descriptivo  -->
                <Label
                    FontSize="14"
                    HorizontalTextAlignment="Center"
                    Text="Reset Password? \nLorem ipsum dolor sit amet, consectetur adipiscing elit."
                    TextColor="#6E6E6E" />

                <!--  Campo de correo  -->
                <Entry
                    BackgroundColor="#E8FFF8"
                    FontSize="16"
                    HeightRequest="50"
                    Placeholder="Enter Email Address"
                    TextColor="Black" />

                <!--  Botón 'Next Step'  -->
                <Button
                    BackgroundColor="#04C7A6"
                    CornerRadius="25"
                    FontSize="16"
                    HeightRequest="50"
                    Text="Next Step"
                    TextColor="White" />

                <!--  Botón 'Sign Up'  -->
                <Button
                    BackgroundColor="#E8FFF8"
                    CornerRadius="25"
                    FontSize="16"
                    HeightRequest="50"
                    Text="Sign Up"
                    TextColor="#04C7A6" />

                <!--  Social Media  -->
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="or sign up with"
                    TextColor="#6E6E6E" />
                <StackLayout
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Image
                        HeightRequest="32"
                        Source="google_icon.png"
                        WidthRequest="32" />
                    <Image
                        HeightRequest="32"
                        Source="facebook_icon.png"
                        WidthRequest="32" />
                </StackLayout>
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Don't have an account? Sign Up"
                    TextColor="#04C7A6" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
